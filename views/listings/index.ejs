<% layout("/layouts/boilerplate") %> <%= success %>
<body>
    <h3>All Listings</h3>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>

            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <!-- Accessing image.url as it's stored in an object format -->
                    <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.image.filename %>" style="height: 20rem;">

                    <!-- Optional overlay content -->
                    <div class="card-img-overlay " >  </div>

                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b>
                            <br>
                            <!-- Handling missing price values with a fallback message -->
                            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %> /night
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
